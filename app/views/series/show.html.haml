.show
  .show-col-1
    %img{:src=>"#{@series.enlace_imagen}"}
  .show-col-2
    .show-titulo
      = @series.nombre
    .show-menu
    %ul{:class=>"nav nav-tabs",:id=>"myTab"}
      %li{:class=>"active"}
        %a{:href=>"#informacion","data-toggle"=>"tab"} Información
      %li
        %a{:href=>"#episodeos","data-toggle"=>"tab"} Episodeos
    #myTabContent{:class=>"tab-content"}
      #informacion{:class=>"tab-pane fade in active"}
        .show-info
          .media Información
          .show-info-tabla
            %table
              %tr
                %td Información
                %td=@series.informacion
              %tr
                %td Puntuación
                %td=@series.puntuacion.round(2)
              %tr
                %td Directores
                %td=@series.directores
              %tr
                %td Título Original
                %td=@series.titulo_original
          .show-sinopsis
            .media Sinopsis
            %p
              =@series.sinopsis
      #episodeos{:class=>"tab-pane fade"}
        .show-info
          .media Episodeos
          .show-info-tabla
            %table
              %tr
                %td Información
                %td=@series.informacion
              %tr
                %td Puntuación
                %td=@series.puntuacion.round(2)
              %tr
                %td Directores
                %td=@series.directores
              %tr
                %td Título Original
                %td=@series.titulo_original
          .show-sinopsis
            .media Sinopsis
            %p
              =@series.sinopsis

    %script{:type=>"text/javascript"}
      $(document).ready(function() {
      $('#informacion a').click(function (e) {
      e.preventDefault()
      $(this).tab('show')
      });
      $('#episodeos a').click(function (e) {
      e.preventDefault()
      $(this).tab('show')
      });
      });



