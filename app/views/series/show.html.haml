.show
  .show-col-1
    %img{:src=>"#{@series.enlace_imagen}"}
  .show-col-2
    .show-titulo
      = @series.nombre
    .show-menu
    %ul{:class=>"nav nav-tabs",:id=>"myTab"}
      %li{:class=>"active"}
        %a{:href=>"#informacion","data-toggle"=>"tab"} Información
      %li
        %a{:href=>"#episodios","data-toggle"=>"tab"} Episodios
    #myTabContent{:class=>"tab-content"}
      #informacion{:class=>"tab-pane fade in active"}
        .show-info
          .media Información
          .show-info-tabla
            %table
              %tr
                %td Información
                %td=@series.informacion
              %tr
                %td Puntuación
                %td=@series.puntuacion.round(2)
              %tr
                %td Directores
                %td=@series.directores
              %tr
                %td Título Original
                %td=@series.titulo_original
          .show-sinopsis
            .media Sinopsis
            %p
              =@series.sinopsis
      #episodios{:class=>"tab-pane fade"}
        .show-info
          .media Episodios
          .show-info-tabla
            %table
              - @series.episodes.each do |episode|
                %tr
                  %td
                    = episode.numero_temporada
                  %td
                    = episode.numero_episodio
                  %td
                    = episode.nombre
          .show-sinopsis
            .media Agregar Episodio
            %p
              = form_for ([@series, @series.episodes.build]) do |f|
                #campo1.field
                  = f.label :nombre
                  %br
                  = f.text_field :nombre
                #campo2.field
                  = f.label :numero_temporada
                  %br
                  = f.text_field :numero_temporada
                #campo3.field
                  = f.label :numero_episodio
                  %br
                  = f.text_field :numero_episodio
                #enviar.actions
                  = f.submit

    %script{:type=>"text/javascript"}
      $(document).ready(function() {
      $('#informacion a').click(function (e) {
      e.preventDefault()
      $(this).tab('show')
      });
      $('#episodios a').click(function (e) {
      e.preventDefault()
      $(this).tab('show')
      });
      });



